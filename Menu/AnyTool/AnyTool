# |
PromptFun(){
  promptfunc=$(echo "
  ${BGreen}  â”Œâ”€â”€${BRed}[${DGrey} ~$(pwd) ${BRed}]
  ${BGreen}  |
  ${BGreen}  â””â”€â”€${BRed}[${BYellow} $Anlominus ${BRed}]${BGreen}â”€â”€â•¼ ${BRed}[${BGreen} ${HacKingPro} ${BRed}]${BGreen}â”€â”€â•¼ ${BRed}[${BGreen} AnyTool ${BRed}]${BGreen}â”€â”€â•¼ ${BGreen}   ")

  echo "$promptfunc"
}
prompt="$(PromptFun)"
# |
# this is the main function
  while true; do
    # tools=`grep -n '.' $tools_data | wc -l`
    # category=`grep -n '.' $category_data | wc -l`
    clear
    # echo "$logo"
    echo "$main_Menu"
    read -p "$prompt" cmd
    case ${cmd} in
      1)
      cd Anonymity
      sh Anonymity start
      cd ..
      ;;
      2)
      cd AnyBackdoor
      sh AnyBackdoor start
      cd ..
      ;;
      3)
      cd AnyEnum
      sh AnyEnum start
      cd ..
      ;;
      4)
      cd AnyExploit
      sh AnyExploit start
      cd ..
      ;;
      5)
      cd AnyGen
      sh AnyGen start
      cd ..
      ;;
      6)
      cd AnyInfo
      sh AnyInfo start
      cd ..
      ;;
      7)
      cd AnyPass
      sh AnyPass start
      cd ..
      ;;
      8)
      cd AnyPhishing
      sh AnyPhishing start
      cd ..
      ;;
      9)
      cd AnyRat
      sh AnyRat start
      cd ..
      ;;
      10)
      cd AnyRecon
      sh AnyRecon start
      cd ..
      ;;
      11)
      cd AnySpam
      sh AnySpam start
      cd ..
      ;;
      12)
      cd CoreMan
      sh CoreMan start
      cd ..
      ;;
      x|exit|Exit)
        echo "${green}Exiting ....${nc}"
        break
      ;;
      *)
        echo "${red}${cmd}: ${purple}invalid option!!${nc}"
        sleep 1
      ;;

    esac

  done
