logo="$(Banner)"
# |
MainMenu(){
  echo "${cyan}     [1] ${green} Anonymity"
  echo "${cyan}     [2] ${green} AnyBackdoor"
  echo "${cyan}     [3] ${green} AnyEnum"
  echo "${cyan}     [4] ${green} AnyExploit"
  echo "${cyan}     [5] ${green} AnyGen"
  echo "${cyan}     [6] ${green} AnyInfo"
  echo "${cyan}     [7] ${green} AnyPass"
  echo "${cyan}     [8] ${green} AnyPhishing"
  echo "${cyan}     [9] ${green} AnyRat"
  echo "${cyan}     [10] ${green} AnyRecon"
  echo "${cyan}     [11] ${green} AnySpam"
  echo "${cyan}     [12] ${green} CoreMan"
  echo "${cyan}     [x] ${green} Exit"
}
main_Menu="$(MainMenu)"
# |
PromptFun(){
  promptfunc=$(echo "
  ${orange}  â”Œâ”€â”€[${blue}Anlominus${purple}ðŸ‘½${red}AnyTool${cyan}$~${orange}]${cyan}
  ${orange}  â””â”€â”€â•¼${green} ")
  echo "$promptfunc"
}
prompt="$(PromptFun)"
# |
# this is the main function
  while true; do
    # tools=`grep -n '.' $tools_data | wc -l`
    # category=`grep -n '.' $category_data | wc -l`
    clear
    echo "$logo"
    echo "$main_Menu"
    read -p "$prompt" cmd
    case ${cmd} in
      1)
      cd Anonymity
      sh Anonymity start
      cd ..
      ;;
      2)
      cd AnyBackdoor
      sh AnyBackdoor start
      cd ..
      ;;
      3)
      cd AnyEnum
      sh AnyEnum start
      cd ..
      ;;
      4)
      cd AnyExploit
      sh AnyExploit start
      cd ..
      ;;
      5)
      cd AnyGen
      sh AnyGen start
      cd ..
      ;;
      6)
      cd AnyInfo
      sh AnyInfo start
      cd ..
      ;;
      7)
      cd AnyPass
      sh AnyPass start
      cd ..
      ;;
      8)
      cd AnyPhishing
      sh AnyPhishing start
      cd ..
      ;;
      9)
      cd AnyRat
      sh AnyRat start
      cd ..
      ;;
      10)
      cd AnyRecon
      sh AnyRecon start
      cd ..
      ;;
      11)
      cd AnySpam
      sh AnySpam start
      cd ..
      ;;
      12)
      cd CoreMan
      sh CoreMan start
      cd ..
      ;;
      x|exit|Exit)
        echo "${green}Exiting ....${nc}"
        break
      ;;
      *)
        echo "${red}${cmd}: ${purple}invalid option!!${nc}"
        sleep 1
      ;;

    esac

  done
