      ${DGrey}|
      ${DGrey}┗==⥤ ${Color_Off}[${LRed} ❗ Use this tool at your own ${BRed}Risk ❗${Color_Off}]
      "
  AwesomeLine_Warning "❌ ❗  Warning  ❗ ❌"
}
#--╼[ Awesomes ]--╼▰ [ Warning ]
AwesomeLine_Warning(){
	local WhatHeader="$@"
  #  ╿ ╿ ╿                      ---                             #
  # ╾┏━┳━┓╼                                                     #
  # ╾┣ # ┫╼ Run as root                                         #
  # ╾┗━┻━┛╼                                                     #
  #  ╽ ╽ ╽                      ---                             #
  echo "\n"
  echo "❌ ${ORANGE}◢${BRed}=x=-=x=-=x=-=x=-=x=-=x=-=${LRed}┣━${ORANGE}╼ ${slowBlink}${WhatHeader}${resetT} ${ORANGE}╾${LRed}━┫${BRed}=-=x=-=x=-=x=-=x=-=x=-=x=-=x=-=x=${ORANGE}◣ ❌"
  echo "\n${resetT}"
}
#--╼[ Awesomes ]--╼▰ [ Install ]
AwesomeInstallPro(){
  if [ -z $1 ]; then
    echo "\n"
    echo "    ${LRed}|──╼${BRed}[${slowBlink} ❌ ${resetT}${BRed}]${LRed}──╼▰ ${BRed}[${LRed} Please Set Something To Find ${BRed}]"
    echo "\n"
  else
    echo "    ${BCyan}${faintT}|──╼${resetT}${BRed}[ ${slowBlink}❌${resetT}${BRed} ]${BCyan}${faintT}──╼${resetT}${LRed}╼▰ ${BRed}[ ${LCyan}Want Trying ${BRed}]${BCyan}${faintT}──╼${resetT}${LRed}╼▰ ${BRed}[ ${LCyan} Install ${ORANGE}${1} ${LCyan}it with ${LGreen}${MyPackManager} ? ${BRed}]"
    AwesomeAskingEcho="$(echo "
    ${ORANGE}┌╼▰ ${LGreen}[${LYellow} Install ${LGreen}]${ORANGE}─╼▰ ${LGreen}[${BCyan} $1 ${LGreen}] ${ORANGE}──────╼▰
    ${ORANGE}┖─╼▰ ${LGreen}[ ${LGrey}y/Y ${LGreen}]${ORANGE}──${LGreen}[ ${LGrey}n/N ${LGreen}] ${ORANGE}──────╼▰  ${LGreen}[${BWhite} ? ${LGreen}]  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      y|Y|yes|YES)
      $(${MyPackManager} install ${1})
      # $( install $1 )
      Press_ENTER
      ;;
      n|N|no|NO)
      break 1
      ;;
    esac
  fi
}
#--╼[ Awesomes ]--╼▰ [ Asking ]
AwesomeAsking(){
  while  true; do
    #statements
    AwesomeAskingEcho="$(echo "
    ${ORANGE}┌╼▰ ${LGreen}[${LYellow} ? ${LGreen}]${ORANGE}─╼▰ ${LGreen}[${BCyan} $1 ${LGreen}] ${ORANGE}──────╼▰ ${LGreen}[ ${BWhite} $@ ${LGreen}]
    ${ORANGE}┖─╼▰ ${LGreen}[ ${LGrey}y/Y ${LGreen}]${ORANGE}──${LGreen}[ ${LGrey}n/N ${LGreen}] ${ORANGE}──────╼▰  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      y|Y|yes|YES)
      $(echo "${1}")
      ;;
      n|N|no|NO)
      break 1
      ;;
      * )
      break
      ;;
    esac
  done
}
#--╼[ Awesomes ]--╼▰ [ Asking ]
AwesomeExplorer(){
  while  true; do
    #statements
    AwesomeAskingEcho="$(echo "
    ${ORANGE}┌╼▰ ${LGreen}[${LYellow} Explorer ${LGreen}]${ORANGE}─╼▰ ${LGreen}[${BCyan} $(pwd) ${LGreen}] ${ORANGE}──────╼▰ ${LGreen}[ ${BWhite} ? ${LGreen}]
    ${ORANGE}┖─╼▰ ${LGreen}[ ${LGrey}ls ${LGreen}]${ORANGE}──${LGreen}[ ${LGrey}nano ${LGreen}] ${ORANGE}──────╼▰  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      ls|lahs)
      ls -lahs
      AwesomeAskingEcho="$(echo "
    ${ORANGE}┌╼▰ ${LGreen}[${LYellow} Explorer ${LGreen}]${ORANGE}─╼▰ ${LGreen}[${BCyan} What Listing ${LGreen}] ${ORANGE}──────╼▰ ${LGreen}[ ${BWhite} ? ${LGreen}]
    ${ORANGE}┖─╼▰ ${LGreen}[ ${LGrey}ls ${LGreen}]${ORANGE}─╼▰ [ ${LGrey}nano ${LGreen}] ${ORANGE}──────╼▰  ${LGrey}")"
      read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
      ls -lahs $AwesomeAskingCmd
      Press_ENTER
      ;;
      nano|edit)
      nano $1
      Press_ENTER
      ;;
      * )
      break
      ;;
    esac
  done
}
#--╼[ Awesomes ]--╼▰ [ Warning ]
AwesomeAskingWarning(){
  while  true; do
    #statements
    AwesomeAskingEcho="$(echo "
    ${ORANGE}┌╼▰ ${LRed}[${LYellow} ? ${LRed}]${ORANGE}─╼▰ ${LRed}[${BRed} $1 ${LRed}]
    ${ORANGE}┖─╼▰ ${LRed}[ ${LGrey}y/Y ${LRed}]${ORANGE}──${LRed}[ ${LGrey}n/N ${LRed}] ${ORANGE}──────╼▰  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      y|Y|yes|YES)
      echo "    ${ORANGE}OK !"
      break
      ;;
      n|N|no|NO)
      clear
      cd ${MainDirectoriy}
      AwesomeLineExit
      exit 0
      ;;
      * )
      clear
      echo "$InvalidOption"
      AwesomeWarning
      sleep 0.3
      ;;
    esac
  done
}
