    echo "    ${BCyan}${faintT}|â”€â”€â•¼${resetT}${BRed}[ ${slowBlink}âŒ${resetT}${BRed} ]${BCyan}${faintT}â”€â”€â•¼${resetT}${LRed}â•¼â–° ${BRed}[ ${LCyan}Want Trying ${BRed}]${BCyan}${faintT}â”€â”€â•¼${resetT}${LRed}â•¼â–° ${BRed}[ ${LCyan} Install ${ORANGE}${1} ${LCyan}it with ${LGreen}${MyPackManager} ? ${BRed}]"
    AwesomeAskingEcho="$(echo "
    ${ORANGE}â”Œâ•¼â–° ${LGreen}[${LYellow} Install ${LGreen}]${ORANGE}â”€â•¼â–° ${LGreen}[${BCyan} $1 ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–°
    ${ORANGE}â”–â”€â•¼â–° ${LGreen}[ ${LGrey}y/Y ${LGreen}]${ORANGE}â”€â”€${LGreen}[ ${LGrey}n/N ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–°  ${LGreen}[${BWhite} ? ${LGreen}]  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      y|Y|yes|YES)
      $(${MyPackManager} install ${1})
      # $( install $1 )
      Press_ENTER
      ;;
      n|N|no|NO)
      break 1
      ;;
    esac
  fi
}
#--â•¼[ Awesomes ]--â•¼â–° [ Asking ]
AwesomeAsking(){
  while  true; do
    #statements
    AwesomeAskingEcho="$(echo "
    ${ORANGE}â”Œâ•¼â–° ${LGreen}[${LYellow} ? ${LGreen}]${ORANGE}â”€â•¼â–° ${LGreen}[${BCyan} $1 ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–° ${LGreen}[ ${BWhite} $@ ${LGreen}]
    ${ORANGE}â”–â”€â•¼â–° ${LGreen}[ ${LGrey}y/Y ${LGreen}]${ORANGE}â”€â”€${LGreen}[ ${LGrey}n/N ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–°  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      y|Y|yes|YES)
      $(echo "${1}")
      ;;
      n|N|no|NO)
      break 1
      ;;
      * )
      break
      ;;
    esac
  done
}
#--â•¼[ Awesomes ]--â•¼â–° [ Asking ]
AwesomeExplorer(){
  while  true; do
    #statements
    AwesomeAskingEcho="$(echo "
    ${ORANGE}â”Œâ•¼â–° ${LGreen}[${LYellow} Explorer ${LGreen}]${ORANGE}â”€â•¼â–° ${LGreen}[${BCyan} $(pwd) ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–° ${LGreen}[ ${BWhite} ? ${LGreen}]
    ${ORANGE}â”–â”€â•¼â–° ${LGreen}[ ${LGrey}ls ${LGreen}]${ORANGE}â”€â”€${LGreen}[ ${LGrey}nano ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–°  ${LGrey}")"
    read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
    case $AwesomeAskingCmd in
      ls|lahs)
      ls -lahs
      AwesomeAskingEcho="$(echo "
    ${ORANGE}â”Œâ•¼â–° ${LGreen}[${LYellow} Explorer ${LGreen}]${ORANGE}â”€â•¼â–° ${LGreen}[${BCyan} What Listing ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–° ${LGreen}[ ${BWhite} ? ${LGreen}]
    ${ORANGE}â”–â”€â•¼â–° ${LGreen}[ ${LGrey}ls ${LGreen}]${ORANGE}â”€â•¼â–° [ ${LGrey}nano ${LGreen}] ${ORANGE}â”€â”€â”€â”€â”€â”€â•¼â–°  ${LGrey}")"
      read -p "${AwesomeAskingEcho}" AwesomeAskingCmd
      ls -lahs $AwesomeAskingCmd
      Press_ENTER
      ;;
      nano|edit)
      nano $1
      Press_ENTER
      ;;
      * )
      break
      ;;
    esac
  done
}
