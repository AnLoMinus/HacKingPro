 Enable_Monitor_Mode(){
   clear
   if [[ $LocalHostNAME = '' ]];then
     echo "\n"
     echo "    You Not Enter the Interface !? "
     echo "\n"
     Press_ENTER
     clear
   else
     echo "\n"
     airmon-ng start $interface
     echo "\n"
     echo "$GREEN    Monitor on ${BBlue}(${BRed}>${BBlue}  $interface ${BRed} <${BBlue})$GREEN has been Enable "
     echo "\n"
     Press_ENTER
     clear
   fi
   Press_ENTER
   clear
 }
 Enable_Monitor_Mode
 ;;
 3)
 Diable_Monitor_Mode(){
   if [[ $interface = '' ]];then
     echo "\n"
     echo "    You Not Enter the Interface !? "
     echo "\n"
     Press_ENTER
     clear
   else
     echo "\n"
     airmon-ng stop $interface
     echo "\n"
     echo "$GREEN    Monitor off ${BBlue}(${BRed}>${BBlue}  $interface ${BRed} <${BBlue})$GREEN has been Disabled "
     echo "\n"
     Press_ENTER
     clear
   fi
 }
 Diable_Monitor_Mode

 ;;
 p|P )
 HacKingProPlanning
 ;;
 cl )
 ClearTarget
 ;;
 ls )
 lahs
 ;;
 usb)
 clear
 # allows you to change any USB stick to Rubber Ducky.
 CreatePayLoad(){
   echo " " > payload.bat
   }
   echo"
   [autorun]

   label=RubberDUSB

   icon=RubberDUSB.ico

   open=payload.bat" >> autorun.inf
 ;;
 x|X|exit|quit|Exit )
 clear
 cd ${MainDirectoriy}
 AwesomeLineExit
 break
 ;;
 * )
 echo "$InvalidOption"
 ;;
esac
}
#--╼▰[ Main Menu ]--╼▰ [ 01 ]--╼▰ [  Reconnaissance & Information Gathering  ]--╼▰ [ NetPro ]--╼▰ [ Input Local Interface ]
Input_Local_Interface(){
  if [ -z ${LocalHostNAME} ]; then
    #statements
    echo "\n"
    echo  "    [*] Finding your Network Interfaces... "$GREEN
    echo "\n"
    ifconfig -a
    echo "\n"
    echo  "    [*] Enter Your Interface : "${BBlue}
    echo "\n"
    read LocalHostNAME
  fi
}
devices=$(netstat -i | cut -d" " -f1 | egrep -v "^Kernel|Iface|lo")
list_Interface=$(ifconfig | grep UP | awk '{print $1}' | tr ":" " ")
list_UP_Interface=$(ifconfig | grep UP |  tr ":" " " | sort -u)

 #--╼▰[ Main Menu ]--╼▰ [ 01 ]--╼▰ [  Reconnaissance & Information Gathering  ]--╼▰ [ NetPro ]--╼▰ [ LocalInfo ]
Local_Net_Info(){
  mkdir "${MainDirectoriyCaseNameLocal}"
	devices=$(netstat -i | cut -d" " -f1 | egrep -v "^Kernel|Iface|lo")
	write_header " Network information "
	echo "Total network interfaces found : $(wc -w | ${devices})"
  echo "\n"
	echo "        ${DGrey}-----------------------"
	echo "        ${DGrey}--- ${ORANGE}IP Address Info${DGrey} ---"
	echo "        ${DGrey}-----------------------"
  echo "\n${Orange}"
	echo "$(ip -4 address show)" >> "${MainDirectoriyCaseNameLocal}/${targetNAME}-Local_Net_Info.log"

  echo "\n"
	echo "        ${DGrey}-----------------------"
	echo "        ${DGrey}--- ${ORANGE}Network Routing${DGrey} ---"
	echo "        ${DGrey}-----------------------"
  echo "\n${Orange}"
	echo "$(netstat -nr)" >> "${MainDirectoriyCaseNameLocal}/${targetNAME}-Local_Net_Info.log"

  echo "\n"
	echo "        ${DGrey}--------------------------------------"
	echo "        ${DGrey}--- ${ORANGE}Interface Traffic information${DGrey}  ---"
	echo "        ${DGrey}--------------------------------------"
  echo "\n${Orange}"
	echo "$(netstat -i)" >> "${MainDirectoriyCaseNameLocal}/${targetNAME}-Local_Net_Info.log"

  echo "\n"
	echo "        ${DGrey}------------------------------"
	echo "        ${DGrey}--- ${ORANGE}MAC/Hardware Addresses${DGrey} ---"
	echo "        ${DGrey}------------------------------"
  echo "\n${Orange}"
	echo "$(cat /sys/class/net/*/address)"  >> "${MainDirectoriyCaseNameLocal}/${targetNAME}-Local_Net_Info.log"
}
#--╼▰[ Main Menu ]--╼▰ [ 01 ]--╼▰ [  Reconnaissance & Information Gathering  ]--╼▰ [ NetPro ]--╼▰ [ LocalNet ]
Info_LocalNet(){
  Input_Local_Interface

  Get_Public_IP=$(dig +short myip.opendns.com @resolver1.opendns.com 2>/dev/null)
  Get_Public_Name=$(dig +short -x ${Get_Public_IP} 2>/dev/null | sed 's/\.$//')

  Get_Public_IP_Raw=$(whois "${Get_Public_IP}" 2>/dev/null)
  Get_Provider_Name=$(echo "${Get_Public_IP_Raw}" | awk '/Information related to/,0' | grep "^descr:" | head -1 | awk -F":" '{print substr($0, index($0,$2))}' | xargs)

  # Get_Public_IP_Raw_org1=$(echo "${Get_Public_IP_Raw}" | grep "^descr:" | grep -v "^$" | awk '!a[$0]++' | awk -F":" '{print substr($0, index($0,$2))}' | head -1 | xargs | grep -v "^$")

}
