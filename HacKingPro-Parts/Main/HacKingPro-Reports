#--╼[ Main Menu ]--╼▰ [ Reports ]--╼▰ [ Profile ]
ReportProfile(){
  A_All=""
  Aa_=$(echo "    ${BBlue}┏╼╼${BCyan}▰ ${BWhite}Who is the target${BCyan}? ${orange}")
  read -p "${Aa_}" A_1
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}Who works there${BCyan}? ${orange}")
  read -p "${Aa_}" A_8
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}How they Operate${BCyan}? ${orange}")
  read -p "${Aa_}" A_2
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What IP ranges do they have allocated${BCyan}? ${orange}")
  read -p "${Aa_}" A_3
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What do they do for mail${BCyan}? ${orange}")
  read -p "${Aa_}" A_4
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What do their DNS records show${BCyan}? ${orange}")
  read -p "${Aa_}" A_5
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What subdomains do they have${BCyan}? ${orange}")
  read -p "${Aa_}" A_6
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What's going on in their company${BCyan}? ${orange}")
  read -p "${Aa_}" A_7
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}How do they assign login names${BCyan}? ${orange}")
  read -p "${Aa_}" A_9
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What's their password policy${BCyan}? ${orange}")
  read -p "${Aa_}" A_10
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What do their networks look like${BCyan}? ${orange}")
  read -p "${Aa_}" A_11
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}Are any of the people who work there vulnerable to social engineering${BCyan}? ${orange}")
  read -p "${Aa_}" A_12
  Aa_=$(echo "    ${BBlue}┣╼${BCyan}▰ ${BWhite}What are there valuable assets${BCyan}? ${orange}")
  read -p "${Aa_}" A_13
  Aa_=$(echo "    ${BBlue}┗╼╼${BCyan}▰ ${BWhite}Where do they store valuable assets${BCyan}? ${orange}")
  read -p "${Aa_}" A_14
  A_All+=$(echo "
      ${BWhite}┏---╼▰ ${ORANGE}[ ${BYellow}Who is the target? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_1} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}Who works there? ${ORANGE}]--╼▰ [${BGreen} ${A_8} ]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}How do they operate? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_2} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What do they do for mail? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_4} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What subdomains do they have? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_6} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What's their password policy? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_10}${BWhite} ]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What do their DNS records show? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_5} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}How do they assign login names? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_9} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What are there valuable assets? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_13}${BWhite} ]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What do their networks look like? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_11}${BWhite} ]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What's going on in their company? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_7} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}What IP ranges do they have allocated? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_3} ${BWhite}]
      ${BWhite}┣╼--╼▰ ${ORANGE}[ ${BYellow}Are any of the people who work there vulnerable to social engineering? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_12}${BWhite} ]
      ${BWhite}┗╼--╼▰ ${ORANGE}[ ${BYellow}Where do they store valuable assets? ${ORANGE}]${BWhite}--╼▰ [${BGreen} ${A_14}${BWhite} ] ")
  echo "${A_All}"
}
#--╼[ Main Menu ]--╼▰ [ Reports ]--╼▰ [ Planning ]
ReportPlanning(){
  # Exporting to {Planning_File}

  echo "# [HacKingPro](https://github.com/AnLoMinus/HacKingPro) Report Planning" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "> ### Date: $(date)" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "---" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "> ##### Recommended Open With [Atom]() or [Obsidian]() Editor For Normal View." >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "---" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "> - # The Target " >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo ">  - ### Target Name: ${targetNAME}" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo ">  - ### Target Domain: ${targetDns}" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo ">  - ### Target IP: ${targetIP}" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo ">  - ### Target Email: ${targetEmail}" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo ">  - ### Target Phone: ${targetPhone}" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md
  echo "---" >> ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md

  # less ${MainDirectoriyCaseNamePlanning}/${targetNAME}-HacKingPro-Planning-Log.md

}

