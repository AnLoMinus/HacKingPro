      echo "\n"
    else
      echo "\n"
      echo "    ${BRed}Not Found ${BWhite}Pass.txt"
      echo "\n"
      # wget https://github.com/Cryilllic/Active-Directory-Wordlists/blob/master/Pass.txt
    fi
    PassWordList="Pass.txt"
  fi
}
