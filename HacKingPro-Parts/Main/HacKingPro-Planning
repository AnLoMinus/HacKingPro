#-â•¼â–°[ HacKingPro ]-â•¼â–°â–°[ Planning ]--â•¼â–°[ Read ]--â•¼â–°[ Target ]--â•¼â–°[ Name ]
ReadTargetNameFromtheUser(){
  # Read Target Name From the User
  # This Variable is for Case Name.
  t0="$(echo "\n          ${BBlue}â”Œâ”€â”€[ ğŸ¯ ]â”€â”€[${BRed} Name ${BBlue}]â”€â”€â•¼  ")"
  read -p "$t0" targetNAME
  if [ -z "$targetNAME" ]; then
    #statements
    targetNAME="AnLoMinus"
    # echo "\n\t  ${BRed}[${LGrey}TN${BRed}]${BBlue} - ${LGrey}Target Name ${BBlue} $targetNAME\n"
  fi
}
#-â•¼â–°[ HacKingPro ]-â•¼â–°â–°[ Planning ]--â•¼â–°[ Read ]--â•¼â–°[ Target ]--â•¼â–°[ IP ]
ReadTargetIPFromtheUser(){
# Read Target IP
# This Variable is for AttacKing ~> IP Addresses .
t1="$(echo "\n          ${BBlue}|â”€â”€[ ğŸ¯ ]â”€â”€[${BRed} IP ${BBlue}]â”€â”€â•¼  ")"
read -p "$t1" targetIP

if [ -z ${targetIP} ]; then
  if [ ! -z ${targetDns} ]; then
    #statements
    GetIP="$(ping -c 1 "${targetDns}" | grep ttl | cut -d " " -f4 |  tr  -d :)"
    targetIP="${GetIP}"
  fi
  #statements
  if [ -z "$targetIP" ]; then
    #statements
    targetIP="127.0.0.1"
    # targetIP=" "
  fi
fi
}
#-â•¼â–°[ HacKingPro ]-â•¼â–°â–°[ Planning ]--â•¼â–°[ Read ]--â•¼â–°[ Target ]--â•¼â–°[ URL ]
ReadTargetURLFromtheUser(){
# Read Target URL / Domain / Dns / Server From the User
# This Variable is for OSINT and AttacKing ~> URL / Domain / Dns / Server/ Websites .
t2="$(echo "\n          ${BBlue}|â”€â”€[ ğŸ¯ ]â”€â”€[${BRed} URL ${BBlue}]â”€â”€â•¼  ")"
read -p "$t2" targetDns
if [ ! -z "$targetDns" ]; then
  #statements
  GetIP="$(ping -c 1 "${targetDns}" | grep ttl | cut -d " " -f4 |  tr  -d :)"
  targetIP="${GetIP}"
else
  targetDns="xXx.AnLoMinus.xXx"
fi
}
