#-‚ïº‚ñ∞[ HacKingPro ]-‚ïº‚ñ∞‚ñ∞[ Planning ]
HacKingProPlanning(){
  clear
  ToolHeaderRun
  TargetStatusRun
  cd "${MainDirectoriyCase}"

  AwesomeLine "Planning"
  ReadTargetNameFromtheUser
  ReadTargetIPFromtheUser
  ReadTargetURLFromtheUser
  ReadTargetEmailFromtheUser
  ReadTargetPhoneFromtheUser
  AwesomeLine "Planning"

  mkdir "${MainDirectoriyCaseName}"
  cd "${MainDirectoriyCaseName}"
  # Define Target Case Name Planning {Variable}
  MainDirectoriyCaseNamePlanning="${MainDirectoriyCaseName}/Planning"
  # Create Target Case Name Planning Folder
  mkdir "${MainDirectoriyCaseNamePlanning}"
  cd "${MainDirectoriyCaseNamePlanning}"

  # Define Target Case Name Recon {Variable}
  MainDirectoriyCaseNameRecon="${MainDirectoriyCaseName}/Recon"
  # Create Target Case Name Recon {Folder}
  mkdir "${MainDirectoriyCaseNameRecon}"


  # User_WordlistLocation
  # ReadUserNameFromtheUser

  # Pass_WordlistLocation
  # ReadUserPassFromtheUser

  # Listing Case Contents
  AwesomeLine "Listing Case"
  echo "          ${BYellow} Log Directory ${BRed}[${BGreen} ${MainDirectoriyCase} ${BRed}]"
  echo "\n"; ls -lahs ${MainDirectoriyCase} ;
  echo "          ${BYellow} Log File ${BRed}[${BGreen}\n $(pwd) ${BRed}\n]\n${BGreen}"
  echo "\n"; pwd;
  AwesomeLine "Listing Case"
  Press_ENTER
}
#-‚ïº‚ñ∞[ HacKingPro ]-‚ïº‚ñ∞‚ñ∞[ Android Planning ]
AndroidPlan(){
  while  true; do
    #statements
    # cd "${MainDirectoriyCaseNameRecon}"
    # mkdir "${MainDirectoriyCaseNameRecon}/Android"
    clear
    cd "${x_Menu_2_Android}"
    ToolHeaderRun
    TargetStatusRun
    AndroidPlanningMainMenu="$(echo "
    ${BGreen}${faintT}‚îå‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞${BGreen}${faintT}‚î§${resetT}${BGreen}${slowBlink} Android Planning ${resetT}${BGreen}${faintT}‚îú${resetT}${BGreen}${faintT}‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞‚ñ∞‚ñ∞
    ${BGreen}${faintT}‚îÇ
    ${BGreen}${faintT}|‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞ ${resetT}${BRed}[${DGrey}$(FunTargetIP)${BRed}]${BGreen}${faintT}‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞
    ${BGreen}${faintT}|‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞ ${resetT}${BRed}[${DGrey}$(FunTargetName)${BRed}]${BGreen}${faintT}‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞
    ${BGreen}${faintT}|‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞ ${resetT}${BRed}[${DGrey}$(FunTargetPhone)${BRed}]${BGreen}${faintT}‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞
    ${BGreen}${faintT}‚îÇ
    ${BGreen}${faintT}‚îî‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ${resetT}${BGreen}‚ïº‚ñ∞‚ñ∞‚ñ∞

    ")"
  read -p "${AndroidPlanningMainMenu}" cmd
  case $cmd in
    x|X|exit|quit|Exit )
    clear
    cd ${MainDirectoriy}
    AwesomeLineExit
    break
    ;;
    p|P )
    HacKingProPlanning
    ;;
    cl )
    ClearTarget
    ;;
    ls )
    lahs
    ;;
    * )
    echo "$InvalidOption"
    ;;
  esac
done
}
