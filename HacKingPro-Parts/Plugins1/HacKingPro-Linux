  echo "
  ${BGreen}┏──${BRed}[${DGrey} ~$(pwd) ${BRed}]
  ${BGreen}|
  ${BGreen}┗──${BRed}[${BYellow} $(AnLoMinus) ${BRed}]${BYellow}╼▰  ${BRed}[${BGreen} Linux ${BRed}]${BYellow}╼▰  ${BGreen}   ")"
  read -p "${CMD_PROMPT}" cmd
  case $cmd in
    01 ) lsusb;read cc ;; # ]--╼▰ [ List USB Devices ]
    02 ) lsblk;read cc ;; # ]--╼▰ [ List Block Devices ]
    03 ) lspci;read cc ;; # ]--╼▰ [ List all PCI Devices ]
    04 ) lslocks;read cc ;; # ]--╼▰ List local system locks ]
    05 ) lsdiff;read cc ;; # ]--╼▰ show which files are modified by a patch ]
    06 ) dmesg;read cc ;; # ]--╼▰ [ Print or Control the Kernel Ring Buffer ]
    07 ) lscpu;read cc ;; # ]--╼▰ [ Display Information about the CPU Architecture ]
    08 ) lsmod;read cc ;; # ]--╼▰ [ Show the Status of Modules in the Linux Kernel ]
    09 ) lslogins;read cc ;; # ]--╼▰ [ Display Information About known Users in the System ]
