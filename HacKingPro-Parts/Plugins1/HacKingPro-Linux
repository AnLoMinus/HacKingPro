while true; do
  clear
  ToolHeaderRun
  TargetStatusRun
  echo "
  ┏────╼ ${BRed}[${BYellow} Command and Control ${BRed}]
  ┖─┲──╼ ${BRed}[${BYellow} The intruder gains persistent access to the victim’s systems/network ${BRed}]
    ┖──╼ ${BRed}[${BYellow} Malware enables intruder to have hands on the keyboard persistent access to target network. ${BRed}]

  ${DGrey}┏--${BRed}[${BGreen} 01 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsusb ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} List USB Devices ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 02 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsblk ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} List Block Devices ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 03 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lspci ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} List all PCI Devices ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 04 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lslocks ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} List local system locks ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 05 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsdiff ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} show which files are modified by a patch ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 06 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}dmesg ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} Print or Control the Kernel Ring Buffer ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 07 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lscpu ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} Display Information about the CPU Architecture ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 08 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsmod ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} Show the Status of Modules in the Linux Kernel ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 09 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lslogins ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} Display Information About known Users in the System ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 10 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsmem ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} List the Ranges of available Memory with their online Status ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 11 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lsipc ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} Show Information on IPC Facilities Currently Employed in the System ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 12 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lstopo ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} lstopo-no-graphics, hwloc-ls - Show the topology of the system ${BRed}]
  ${DGrey}┃--${BRed}[${BGreen} 12 ${BRed}]${BGreen}-╼▰ ${BRed}[ ${ORANGE}lstopo ${BRed}]${BGreen}--╼▰ ${BRed}[${LGrey} lstopo-no-graphics, hwloc-ls - Show the topology of the system ${BRed}]
  ${DGrey}┗--${BRed}[${DGrey} XX ${BRed}]${BGreen}-╼▰ ${BRed}[${DGrey} Exit / Quit / Close ${BRed}]

   ${DGrey}┏--[ ## ]-╼▰ [ Services ]--╼▰ [ List Services ]
