_LinuxPlusPro_101_1(){
  while true; do
    #statements
    clear
    ToolHeaderRun
    # TargetStatusRun
    _101_1_Menu="$(echo "
    ${BGreen}101.1 Determine and Configure Hardware Settings

    ${BCyan}Description:${BWhite}\n Candidates should be able to determine and Configure Fundamental System Hardware

    ${ORANGE}# Key Knowledge Areas: ${LGrey}
      ‚Ä¢ Enable and Disable Integrated Peripherals.
      ‚Ä¢ Differentiate between the various types of mass Storage Devices.
      ‚Ä¢ Configure systems with or without external peripherals such as keyboards Differentiate between the various types of mass storage devices
      ‚Ä¢ Determine Hardware Resources for Devices.
      ‚Ä¢ Tools and Utilities to List various Hardware Information (e.g. lsusb, lspci, etc.).
      ‚Ä¢ Tools and Utilities to Manipulate USB Devices.
      ‚Ä¢ Conceptual Understanding of sysfs, udev and dbus.
      ‚Ä¢ The following is a partial list of the used files, terms, and utilities: /sys, /proc, /dev, modprobe, lsmod, lspci, lsusb

    ${ORANGE}# Key files, terms, and utilities include:${LGrey}
      ‚Ä¢ /proc/pci              |  PCI bus information
      ‚Ä¢ /proc/dma              |  Linux's view of assigned DMA channels | Lists the registered DMA (direct memory access) channels in use.
      ‚Ä¢ /proc/ioports          |  Linux's view of used I/O ports        | Lists currently registered Input/Output port regions in use.
      ‚Ä¢ /proc/cpuinfo          |  Lists detailed information about the CPU(s) found by the operating system.
      ‚Ä¢ /proc/interrupts       |  Linux's view of used interrupts       | A list of numbers of the interrupts per IO device for each CPU.

    ${ORANGE}# The following is a partial list of the used files, terms and utilities: ${LGrey}
      ‚Ä¢ /sys/
      ‚Ä¢ /proc/
      ‚Ä¢ /dev/
      ‚Ä¢ lsmod
      ‚Ä¢ lspci
      ‚Ä¢ lsusb
      ‚Ä¢ modprobe

    ${BGreen}‚îå‚îÄ‚îÄ${BRed}[${ORANGE} Arsenal ${BRed}]${BGreen}‚îÄ‚îÄ${resetT}${BYellow}‚ïº‚ñ∞  ${BRed}[${BGreen} $ArsenalCommand ${BRed}]${BGreen}${resetT}
    ${BGreen}|
    ${BGreen}|‚îÄ‚îÄ${BRed}[${DGrey} ~$(pwd) ${BRed}]
    ${BGreen}|
    ${BGreen}‚îî‚îÄ‚îÄ${BRed}[${BYellow} ${HacKingPro} ${BRed}]${BGreen}‚îÄ‚îÄ${resetT}${BYellow}‚ïº‚ñ∞  ${BRed}[${BGreen} Linux+ ${BRed}]${BGreen}‚îÄ‚îÄ${resetT}${BYellow}‚ïº‚ñ∞ ${BRed}[${BGreen} 101.1 ${BRed}]${BGreen}‚îÄ‚îÄ${resetT}${BYellow}‚ïº‚ñ∞    ")"
    read -p "$_101_1_Menu" cmd
    case $cmd in
      xx ) echo " ";; ##
      x|X|exit|quit|Exit )
      clear
      cd ${MainDirectoriy}
      AwesomeLineExit
      break
      ;;

    esac
  done

} # Determine and Configure Hardware Settings
